{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react",
        "strict": true,
        "paths": {
            "@/*": ["./*"]
        },
        "allowJs": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "app/context/userContext.jsx",
        "app/(screens)/order-status/order_status.jsx"
    ]
}
